<html>
    <head>
        <title>
        That is why we play
        </title>
        <link rel="stylesheet" href="/css/particle.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/6c8257ebd6.js" crossorigin="anonymous"></script>
       <style>
        .zoom:hover {
            -ms-transform: scale(1.09); 
            -webkit-transform: scale(1.05);
            transform: scale(1.09); 
            cursor: crosshair;
            border:2px solid black;
          }
          body{
              
              background-color:#E2FCFD;

          }
          .box{
              overflow: hidden;
          }
        </style>
    </head>
    <body>
        <nav class="navbar navbar-light bg-dark" >
            <div class="container-fluid"> 
                <div class="navbar-header" >
                    <a class="navbar-brand" href="/"><span style="color: whitesmoke;">Basketball=LIFE <i class="fas fa-baseball-ball bb"></i></span> </a>
                 
                </div>
                <span style="color: aliceblue;text-align: right;"><i class="fas fa-user"></i>&nbsp;- <%= (currentUser.username).toUpperCase() %></span> 
         
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar" >
             <span style="color: cornsilk;"><span class="navbar-toggler-icon" ></span></span> 
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="nav navbar-nav navbar-right">
                   <% if(!currentUser){ %>
                        <li class="nav-item ">
                            <a class="nav-link" href="/login">LOGIN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">SIGNUP</a>
                        </li>
                   <% } else{ %>
                    <li class="nav-item">
                        <a  class="nav-link"href="/logout" style="color: whitesmoke;">LOGOUT</a>
                    </li> 
                    
                   <% } %>
                   
                </ul>
            </div>
                
        
        </nav>



<div id="particles-js"></div>
<script src="/particle/particles.js"></script>
<script src="/particle/app.js"></script>



<div class="container" style="margin-top: 50px;">
    

    <div class="jumbotron bg"><h1>List of AKGEC's Best players! <i class="fas fa-baseball-ball "></i></h1>
       <button type="button" class="btn btn-outline-dark" onclick="window.location.href='/campgrounds/new';">Add New Player Profile </button> 
    </div>


    <div class="row" style="height: 350px;"> 
    <% campground.forEach(function(value){ %>
    
    <div class=" col-lg-4 col-md-4 col-sm-6 "  > 
 
       <div class="thumbnail" >
        <div id="border">
          <img class="img-responsive zoom" src="<%= value.image %>" style="width:100%;height:65%;" ></div>
          
           <div class="caption" style="padding: 9px;">
             <h4><%= value.name %></h4>
           </div>
           <p>
               <a href="/campgrounds/<%= value._id%>"class="btn btn-dark ">Show More</a>
           </p>
        </div>
    
     
    </div>
   <% }) %>
  
 </div>
</div>
</div>

